{% extends '::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Commande #{{ order.id }}</h2>
                    {% if order.status == true %}
                        Traitée
                    {% else %}
                        En cours
                    {% endif %}
                </div>
                {% for product in order.products %}
                    <div class="col-md-3 col-sm-6">
                        <div class="single-shop-product">
                            <div class="product-upper">
                                {% if product.file %}
                                    <img style="width: 100%; height:auto;" src="{{ asset('uploads/' ~ product.file) }}">
                                {% endif %}
                            </div>
                            <h2><a href="{{ path('show_product', {'id' : product.id}) }}">{{ product.name }}</a></h2>
                            <div class="product-carousel-price">
                                <ins>{{ product.price }} €</ins>
                            </div>
                            {# TODO : reactivate #}
                            {#<div class="product-option-shop">#}
                            {#<a class="add_to_cart_button" data-quantity="1" data-product_sku="" data-product_id="70" rel="nofollow" href="/canvas/shop/?add-to-cart=70">Ajouter au panier</a>#}
                            {#</div>#}
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
    </div>
{% endblock %}
