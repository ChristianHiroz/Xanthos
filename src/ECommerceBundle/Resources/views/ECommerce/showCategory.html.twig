{% extends '::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="product-big-title-area">
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <div class="product-bit-title text-center">
                        <h2>{{ category.name }}</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>
    {% if category.isMainCategory() OR category.isSecondaryCategory() %}
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    {% for subCategory in category.subCategorys %}
                        <div class="col-md-3 col-sm-6">
                            <div class="single-shop-product">
                                <div class="product-upper">
                                    {% if subCategory.picture %}
                                        <img style="width: 100%; height:auto;" src="{{ asset('uploads/' ~ subCategory.picture) }}">
                                    {% endif %}
                                </div>
                                <h2 style="text-align: center;"><a href="{{ path('show_category', {'id' : subCategory.id})}}">{{ subCategory.name }}</a></h2>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            </div>
        </div>
    </div>
    {% else %}
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
            <div class="container">
                <div class="row">
                    {% for product in category.products %}
                        <div class="col-md-3 col-sm-6">
                            <div class="single-shop-product">
                                <div class="product-upper">
                                    {% if product.file %}
                                        <img style="width: 100%; height:auto;" src="{{ asset('uploads/' ~ product.file) }}">
                                    {% endif %}
                                </div>
                                <h2><a href="{{ path('show_product', {'id' : product.id}) }}">{{ product.name }}</a></h2>
                                <div class="product-carousel-price">
                                    <ins>{{ product.price }} â‚¬</ins>
                                </div>
                                {# TODO : reactivate #}
