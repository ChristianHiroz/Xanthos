{% extends '::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Commande #{{ order.id }}</h2>
                    <p>Montant : {{ order.price }} €</p>
                    <form action="{{ path('payment', {'id' : order.id}) }}">
                        <label>Numéro de carte</label>
                        <input name="card_number" type="text">
                        <label>CVV</label>
                        <input name="card_cvv" type="text">
                        <label>Date fin de validité</label>
                        <input name="validity_date" type="text" placeholder="01/18">
                        <input type="submit">
                    </form>
                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
