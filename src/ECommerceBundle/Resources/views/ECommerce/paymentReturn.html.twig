{% extends '::base.html.twig' %}

{% block body %}
    {{ parent() }}
    <div class="single-product-area">
        <div class="zigzag-bottom"></div>
        <div class="container">
            <div class="row">
                <div class="col-md-12">
                    <h2>Paiement de la commande #{{ order.id }}</h2>
                    <p>Montant : {{ order.price }} €</p>
                    {% if status %}
                        <p>
                            Le paiement est un succès, merci de votre fidélité !
                            Vos articles seront livrés au plus vite, pour plus d'informations,
                            envoyez un email à xanthos.sellerie@gmail.com
                        </p>
                    {% else %}
                        <p>
                            Le paiement n'a pas abouti.
                            Si l'erreur persiste, contactez nous à xanthos.sellerie@ŋmail.com en indiquant votre
                            email ainsi que le code suivant : {{ paymentCode }}
                        </p>
                    {% endif %}

                </div>
            </div>
        </div>
    </div>
    </div>
{% endblock %}
